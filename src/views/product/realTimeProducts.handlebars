<div class="container">
    <div style="margin: 10px; display: none;" id="ocultar">
        <h1>New product</h1>
        <form class="row g-3" id="formProd">       
            <div class="col-md-4 input-group-sm">
                <input class="form-control" type="text" name="title" placeholder="title">
            </div>
            <div class="col-md-4 input-group-sm">
                <input class="form-control" type="text" name="category" placeholder="category">
            </div>
            <div class="col-8 input-group-sm">
                <input class="form-control" rows="3" type="text" name="description" placeholder="description">
            </div>
            <div class="col-5 input-group-sm">
                <input class="form-control" type="text" name="code" placeholder="code">
            </div>
            <div class="col-2 input-group-sm">
                <input class="form-control" type="number" name="price" placeholder="$ 0.00">
            </div>
            <div class="col-1 input-group-sm">
                <input class="form-control" type="number" name="stock" placeholder="stock">
            </div>       
            <div class="col-8 input-group-sm">
                <input class="form-control" type='file' name='thumbnail' multiple/>
            </div>       
            <div >
                <button type="submit" class="btn btn-primary">Add Product</button>
            </div>
        </form>
        <button onclick="ocultar()" id="bt2" class="btn btn-outline-danger btn-sm" style="margin-top: 10px;"><i class="bi bi-x-lg" width="24" height="24" fill="red"></i></button>
    </div>
    <div style="margin-top: 16px;">
        <button onclick="ocultar()" id="bt" class="btn btn-outline-secondary">Nuevo Producto</button>
    </div>
</div>
<hr>
<div>
    <section class="intro">
        <div class="bg-image h-100">
            <div class="mask d-flex align-items-center h-100">
                <div class="container">
                    <h1>Real Time Products List</h1>
                    <div class="row justify-content-center">
                        <div class="col-12">
                            <div class="card shadow-2-strong">
                                <div class="card-body p-0">
                                    <div class="table-responsive table-scroll" data-mdb-perfect-scrollbar="true" style="position: relative; height: 860px">
                                        <table class="table table-striped table-bordered table-sm" cellspacing="0" style="width:100%">
                                            <tr>
                                                <th scope="col" style="display:none">#</th>
                                                <th width="85" scope="col">Image</th>
                                                <th width="250" scope="col">Title</th>
                                                <th scope="col">Description</th>
                                                <th width="200" align="right" scope="col">Price</th>
                                                <th width="100" scope="col">Delete</th>
                                            </tr>
                                            <tbody id="listaTiempo"></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
