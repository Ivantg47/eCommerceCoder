<div>
    <section class="intro">
        <div class="bg-image h-100">
            <div class="mask d-flex align-items-center h-100">
                <div class="container" style="margin-top: 50px;">
                    <h1>Cart: <span id="cartid">{{cart.id}}</span></h1>
                    <div class="row justify-content-center">
                        <div class="col-12">
                            <div class="card shadow-2-strong">
                                <div class="card-body p-0">
                                    {{#if cart.isValid}}
                                        {{#if cart.products}}
                                        <div class="table-responsive table-scroll" data-mdb-perfect-scrollbar="true" style="position: relative; height: 700px">
                                            <table class="table table-striped table-bordered table-sm" cellspacing="0" style="width:100%">
                                                <tr class="text-uppercase text-success">
                                                    <th scope="col" style="display:none">ID</th>
                                                    <th width="100" scope="col"></th>
                                                    <th scope="col">Producto</th>
                                                    <th width="150" class="text-end" scope="col">Precio</th>
                                                    <th width="100" class="text-end" scope="col">Cantidad</th>
                                                    <th width="150" class="text-end" scope="col">Total</th>
                                                    <th width="100" scope="col"></th>
                                                </tr>
                                                
                                                <tbody>
                                                {{#each cart.products}}    
                                                    <tr class="alert">
                                                        <td style="display:none">{{this.product._id}}</td>
                                                        <td class="text-center"><img src="{{this.product.thumbnail.[0]}}" alt="No image" width="72" height="72" style="vertical-align:middle; object-fit: contain;"></td>
                                                        <td>{{this.product.title}}</td>
                                                        <td align="right">{{this.product.price}}</td>
                                                        <td align="right">{{this.quantity}}</td>
                                                        <td align="right">{{this.subTotal}}</td>
                                                        <td style="text-align: center;"><button class="btn btn-outline-danger"  onclick="deleteProduct('{{this.product._id}}')"><i class="bi bi-trash" width="24" height="224" fill="red"></i></button></td>
                                                    </tr>
                                                {{/each}}
                                                <tr>
                                                    <td colspan="4" height="40px">
                                                        <div>
                                                            <a class="btn btn-dark" href="/api/carts/{{cart.id}}/purchase">Proceder al pago</a>
                                                        </div>
                                                    </td>
                                                    <td align="right" style="background:#ccc; font-weight:bold">TOTAL</td>
                                                    <td align="right" style="background:#ccc; font-weight:bold">{{cart.totalPrice}}</td>
                                                    <td style="background:#ccc; font-weight:bold"></td>
                                                </tr>
                                                </tbody>
                                                
                                            </table>
                                        </div>
                                        
                                        {{else}}
                                            <h2>Tu carrito se encuentra vac√≠o</h2>
                                        {{/if}}
                                    {{else}}
                                    <h2>No se encontro el carrito</h2>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<style>
td {
    vertical-align: middle;
}

h2 {
    text-align: center;
}
</style>
<script src="/js/carrito.js"></script>